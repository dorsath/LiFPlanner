#town
  %h4== Town: #{@town.name}

  =render partial: "nav"

  #townsmen
    %table
      %tr
        %th Name
        %th Rank
      - @town.townsmen.each do |townsman|
        %tr
          %td=townsman.name
          %td=townsman.named_rank

  - if @town.founder?(current_user)
    =form_for(@town.townsmen.new, url: town_pending_invites_path(town_id: @town)) do |f|
      Invite your peasant:
      =text_field_tag "pending_invite[username]"
      =f.submit "invite"
